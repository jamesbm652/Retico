<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_Layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.proyecto.udata.retico.MenuPrincipal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@color/colorPrimary"
            android:elevation="8dp"

            >

            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_dehaze_white_24dp"
                android:layout_gravity="left"
                android:clickable="true"
                android:onClick="onClick"
                />

            <ImageButton
                android:id="@+id/btnLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_exit_to_app_white_24dp"
                android:layout_gravity="right"
                android:clickable="true"
                />


        </android.support.v7.widget.Toolbar>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/fondoretico"/>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigationMenu"
        android:layout_gravity="start"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginBottom="30dp"
                android:background="@color/colorPrimaryDark"
                android:elevation="8dp"

                >

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/logoretico"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    />


            </android.support.v7.widget.Toolbar>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnModificar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mi perfil"

                    />

                <Button
                    android:id="@+id/btnListarEquipos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lista de Equipos"
                    />

                <Button
                    android:id="@+id/btnCreacionEquipos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Crear Equipo"
                    />

                <Button
                    android:id="@+id/btnRetosPendientes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Retos pendientes"
                    />

                <Button
                    android:id="@+id/btnRetosEnviados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Retos enviados"
                    />
                <Button
                    android:id="@+id/btnRetosAceptados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Retos aceptados"
                    />
                <Button
                    android:id="@+id/btnRetosRechazados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Retos rechazados"
                    />
                <Button
                    android:id="@+id/btnRetosCancelados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Retos cancelados"
                    />

            </LinearLayout>



        </LinearLayout>
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
