<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/tituloPopup"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:textColor="@android:color/white"
        android:text="UNIRME A: "
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        android:elevation="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="*Para formar parte de este equipo el encargado debe proporcionarle una contraseña"
        android:textColor="#757575"/>

    <EditText
        android:id="@+id/txtPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#212121"
        android:textColorHint="#212121"
        android:textAlignment="center"
        android:hint="Ingrese la contraseña"
        android:text=""
        android:inputType="textPassword"
        android:layout_marginBottom="10dp"
        />

        <Button
            android:id="@+id/btnUnirseAlEquipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aceptar"
            android:textColor="@android:color/white"
            android:background="#666"
            android:alpha="0.6"
            android:clickable="true"/>
    </LinearLayout>

    </LinearLayout>
</LinearLayout>