<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tituloPopup"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="6dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="INFORMACIÃ“N DEL RETO: "
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Equipo retador: "
                    android:textColor="#505050"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtEquipoRetador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="#757575"
                    android:textSize="17sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Equipo retado: "
                    android:textColor="#505050"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtEquipoRetado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="#757575"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Fecha: "
                    android:textColor="#505050"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtFechaInfoReto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="#757575"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Hora: "
                    android:textColor="#505050"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtHoraInfoReto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="#757575"
                    android:textSize="17sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Mensaje: "
                android:textColor="#505050"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtMensajeInfoReto"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="top|left"

                android:inputType="textMultiLine"
                android:lines="5"
                android:scrollbars="vertical"
                android:text=""
                android:textColor="#757575"
                android:textSize="17sp" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <Button
                android:id="@+id/btnAceptarReto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:background="@color/colorAccent"
                android:clickable="true"
                android:text="Aceptar"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnCancelarReto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:alpha="0.7"
                android:background="@color/colorPrimaryDark"
                android:clickable="true"
                android:gravity="center"
                android:text="Cancelar"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnRechazarReto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:alpha="0.7"
                android:background="@color/colorPrimaryDark"
                android:clickable="true"
                android:text="Rechazar"
                android:textColor="@android:color/white" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
